<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ts16.content">

<metal:styleslot fill-slot="style_slot">
</metal:styleslot>
<metal:jsslot fill-slot="javascript_head_slot">
</metal:jsslot>

<body>
<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">

<!-- section-1 start -->
<section id="section-1">
    <section class="about-ser pad-t-b-130">
      <div class="container">
        <!-- Heading -->
        <div class="heading-block margin-bottom-20">
          <a name="aaa"></a><h2><span style="font-family:微軟正黑體">最新消息</span></h2><br>
          <h4>- NEWS - </h4><br><br>
        </div>
        <div class="row">
          <!-- Our Mission -->
          <div class="col-sm-12">
            <article>
              <tal:item repeat="item view/getNews">
                <h3 style="font-family:微軟正黑體" class="${python:'more' if repeat['item'].index > 2 else ''}">
                  <span>${python:item.created.strftime('%Y.%m.%d')}</span>　
                  <a href="${item/getURL}">${item/Title}</a>
                </h3>
                <br class="${python:'more' if repeat['item'].index > 2 else ''}">
              </tal:item>
              <p></p>
              <a href="javascript:void(0)" class="read-more-news">Read More</a>
            </article>
          </div>
        </div>
      </div>
    </section>
</section>

<section class="section-js">
  <script>
    $(document).ready(function(){
      $('h3.more, br.more').hide()

      $('.read-more-news').click(function(){
        $('h3.more, br.more').slideToggle()
        text = $(this).text()
        if(text == 'Read More'){
            $(this).text('Read Less')
        }else{
            $(this).text('Read More')
        }
      })
    })
  </script>
</section>
<!-- section-1 end -->


<!-- section-2 start -->
<section id="section-2">
    <section class="portfolio port-wrap pad-t-b-130">
      <div class="container">
        <!-- Heading -->
        <div class="heading-block margin-bottom-30">
          <h3><span style="font-family:微軟正黑體">入圍作品</span></h3>
          <hr>
        </div>

        <!-- PORTOFLIO ITEMS FILTER -->
        <ul class="portfolio-filter">
          <li><a class="active" href="#." data-filter="*">All</a></li>
          <li><a href="#." data-filter=".表演藝術"><span style="font-family:微軟正黑體">表演藝術</span></a></li>
          <li><a href="#." data-filter=".視覺藝術"><span style="font-family:微軟正黑體">視覺藝術</span></a></li>
          <li><a href="#." data-filter=".藝冠榜"><span style="font-family:微軟正黑體">藝冠榜</span></a></li>
        </ul>

        <!-- Item Start -->
        <div class="items with-space col-3 popup-gallery">
          <!-- ITEM -->
<?python
import random
brain = list(view.getAward())
random.shuffle(brain)
?>

<tal:item repeat="item brain">
          <div class="cbp-item portfolio-item ${python:item.Subject[0]}">
            <article>
              <div class="portfolio-image"> <img alt="${item/Title}" src="${item/getURL}/@@images/image/large">
                  <div class="portfolio-overlay"></div>
                <div class="position-bottom">
                    <h4><a href="${item/getURL}">${item/Title}</a></h4>
                  <p>${python:item.Subject[0]}</p>
                </div>
              </div>
            </article>
          </div>
</tal:item>
        </div>
        <!-- LOAD MORE -->
        <div class="text-center margin-top-50 animate fadeInUp" data-wow-delay="0.4s"> <a href="portfolio_1-4-col.html" class="btn btn-inverse">READ MORE</a> </div>
      </div>
    </section>
</section>
<!-- section-2 end -->




</metal:block>
</metal:content-core>

</body>
</html>
